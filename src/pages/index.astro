    </main>

    <script type="module">
      const form = document.getElementById('leadForm');
      const msg = document.getElementById('formMessage');
      const btn = document.getElementById('submitBtn');

      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        msg.classList.add('hidden'); msg.textContent = '';
        btn.disabled = true;
        btn.textContent = 'Enviando...';

        const data = Object.fromEntries(new FormData(form));

        try {
          const res = await fetch('/api/contact', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
          });
          const json = await res.json();
          if (json.success) {
            msg.classList.remove('hidden');
            msg.classList.remove('text-red-600');
            msg.classList.add('text-green-600');
            msg.textContent = 'Gracias ‚Äî su solicitud fue recibida. Nuestro equipo le contactar√° pronto.';
            form.reset();
          } else {
            throw new Error(json.message || 'Error en el env√≠o');
          }
        } catch (err) {
          msg.classList.remove('hidden');
          msg.classList.remove('text-green-600');
          msg.classList.add('text-red-600');
          msg.textContent = 'Error al enviar el formulario. Intente nuevamente.';
          console.error(err);
        }

        btn.disabled = false;
        btn.textContent = 'Solicitar asesor√≠a';
      });
    </script>
